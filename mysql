CREATE TABLE `kommentar` (
`id` INT( 10 ) NOT NULL AUTO_INCREMENT PRIMARY KEY ,
`Name` VARCHAR( 250 ) NOT NULL ,
`Vorname` VARCHAR( 250 ) NOT NULL ,
`Kommentar` VARCHAR( 250 ) NULL 
 );
