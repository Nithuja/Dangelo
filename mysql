drop database if exists daangelo;
create database daangelo;

use daangelo;
	
CREATE TABLE `Pizza` (
`id` INT( 10 ) NOT NULL AUTO_INCREMENT PRIMARY KEY ,
`Pizza` VARCHAR( 250 ) NOT NULL ,
`Zutaten` VARCHAR( 250 ) NOT NULL ,
`Grösse klein` VARCHAR( 250 ) NULL ,
`Preis klein` VARCHAR( 250 ) NULL,
`Grösse gross` VARCHAR( 250 ) NULL ,
`Preis gross` VARCHAR( 250 ) NULL 
 );


